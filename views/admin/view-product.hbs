<section>
<div class="container">
  <div class="row mt-4">
    <a href="/" class="btn btn-success">GO TO HOME</a>
    <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
  </div>
    <table class="table mt-5" id="#myTable">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">title</th>
      <th scope="col">Cetegory</th>
      <th scope="col">description</th>
      <th scope="col">Code</th>
      <th scope="col">Image</th>
      <th scope="col">Opt</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td scope="row">{{this.Name}}</td>
      <td scope="row">{{this.Catagory}}</td>
      <td scope="row">{{this.prize}}</td>
      <td scope="row">{{this.Code}}</td>
      <td>
      <img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt="">
      </td>
      <td>
        
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a></td>
      
    </tr>
    <tr>
        {{/each}}
  </tbody>
</table>
</div>
</section>

<script>
  $(function (){
    $('#myTable').DataTable()
  })
</script>

<script>
  $(document).ready(function() {
    $('#myTable').DataTable({
      "pageLength": 10, // Display 10 rows per page
      "order": [[ 1, "desc" ]] // Order by the second column in descending order
    });
  });
</script>

