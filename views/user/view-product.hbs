<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 mt-5">
  <div class="card bg-success text-white full">
    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="Product Image" style="height: 200px;">
    <div class="card-body">
      <h5 class="card-title">Name{{this.Name}}</h5>
      <p class="card-text">Catagory:{{this.Catagory}}.</p>
      <p class="card-text">Code:{{this.Code}}.</p>
      <p class="card-text">Prize:{{this.prize}}.</p>
      <a href="{{this.Link}}" class="btn btn-light">Buy Now</a>
    </div>
  </div>
</div>    
    {{/each}}
 </div>
